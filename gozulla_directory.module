/*
 * Admin Settings form for gozulla directory
 */
function gozulla_directory_settings() {
  $form['gozulla_directory_this_config'] = array(
    '#type' => 'fieldset',
    '#title' => t('gozulla directory configuration settings'),
    '#collapsible' => FALSE,
    '#collapsed' => FALSE
  );
  
  $form['gozulla_directory_this_settings']['gozulla_directory_factual_key'] = array(
    '#type' => 'textfield',
    '#title' => t('Factual API key'),
    '#default_value' => variable_get('gozulla_directory_factual_key', ''),
    '#required' => TRUE
  );
  
  $form['gozulla_directory_this_settings']['gozulla_directory_factual_secret'] = array(
    '#type' => 'textfield',
    '#title' => t('Factual API secret'),
    '#default_value' => variable_get('gozulla_directory_factual_secret', ''),
    '#required' => TRUE
  );

  return system_settings_form($form);
}

