function gozulla_directory_form_alter(&$form, $form_state, $form_id) {
  
  if (isset($_SESSION['ip_geoloc']['location']['locality']) && isset($_SESSION['ip_geoloc']['location']['administrative_area_level_1'])) {
    $city_state = $_SESSION['ip_geoloc']['location']['locality'] . ', ' . $_SESSION['ip_geoloc']['location']['administrative_area_level_1'];
  }
  else {
    $city_state = t('Newport, OR');
  }
  
  switch ($form_id) {
    case 'views_exposed_form':
      if ($form['#id'] == 'views-exposed-form-gozulla-directory-page-1' || 
        $form['#id'] == 'views-exposed-form-gozulla-directory-page-2' || 
        $form['#id'] == 'views-exposed-form-gozulla-directory-page-3' || 
        $form['#id'] == 'views-exposed-form-gozulla-directory-page-4' || 
        $form['#id'] == 'views-exposed-form-gozulla-directory-page-5' || 
        $form['#id'] == 'views-exposed-form-gozulla-directory-page-6' ||
        $form['#id'] == 'views-exposed-form-gozulla-directory-page-7' ||
        $form['#id'] == 'views-exposed-form-gozulla-directory-deals') {    
        
        // Using dpm with Devel installed to give me array data on the Views form
       
        $form['submit'] = array(
          '#type' => 'image_button',
          '#src' => drupal_get_path('module', 'gozulla_directory') .'/images/go_btn.png',
        );
        
        $form['circle']['location']['#size'] = 15; 
        $form['circle']['location']['#default_value'] = $city_state; 
       
        $form['circle']['value']['#field_prefix'] = t('<strong>Change Location:</strong> '); 
        $form['circle']['value']['#field_suffix'] = t('miles'); 
        
         //dpm($form);
      }
    break;
  }
}


